%h3
  %span
    %image.favicon{src: "#{@source.favicon}"}
  = @source.name

%a{href: "/refresh/#{@source.id}"}
  refresh feed

%ul
- @articles.each do |a|
  %li
    %a{href: "/sources/#{a.source_id}/articles/#{a.id}"}
      = a.title
    %div
      %small
        = a.published_at.strftime('%m/%d/%Y') if a.published_at

