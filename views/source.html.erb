<div id="main" class="pure-g">
  <div class="pure-u">
    <h2>
      <span>
        <image class="favicon" src="<%= @articles.first.source.favicon %>"></image>
      </span>
      <%= @articles.first.source.name %>
    </h2>
    <!--/ should be queued in a worker
    -->
    <a class="button-success pure-button" href="/refresh/<%= @articles.first.source.id %>">
      Refresh Feed
    </a>
    <div class="tags">
      <% @articles.first.source.tags.each do |t| %>
        <a class="badge badge-info" href="/tag/<%= t.id %>">
          <%= t.name %>
        </a>
      <% end %>
      <ul></ul>
      <div class="articles">
        <% @articles.each do |a| %>
          <li>
            <%= a.published_at.strftime('%m/%d/%Y') if a.published_at %>
            |
            <a href="/articles/<%= a.id %>">
              <%= a.title %>
            </a>
          </li>
        <% end %>
      </div>
    </div>
  </div>
</div>
