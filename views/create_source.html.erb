<div class="pure-g">
  <div class="pure-u-5-5">
    <h2>
      Create Source
    </h2>
    <form action="/create" class="pure-form pure-form-stacked" method="post">
      <fieldset>
        <div class="form-group">
          <label for="feed_url">
            Feed URL
          </label>
          <input class="form-control" id="feed_url" name="url" type="text"></input>
        </div>
        <div class="form-group">
          <label for="source_tags">
            Tags
          </label>
          <input class="form-control" id="source_tags" name="tags" type="text"></input>
        </div>
        <div class="form-group">
          <button class="pure-button pure-button-primary" type="submit">
            Create
          </button>
        </div>
      </fieldset>
    </form>
  </div>
</div>
